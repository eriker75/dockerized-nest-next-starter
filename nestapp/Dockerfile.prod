FROM node:20 AS builder
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm run build

# Etapa de producci贸n
FROM node:20
WORKDIR /app

COPY package*.json ./
RUN npm install --only=production

COPY --from=builder /app/dist ./dist

# Puerto de exposici贸n y comando para iniciar la aplicaci贸n
EXPOSE 3000
CMD ["npm", "run", "start:prod"]
